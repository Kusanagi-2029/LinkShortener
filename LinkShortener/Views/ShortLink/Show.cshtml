@model ShortLinks
@{
    ViewData["Title"] = "Details of a short URL";
}

<br />

<div class="jumbotron">

    <h1>Укорачиватель ссылок</h1>

    <br />

    <p>Детали по ссылке:</p>

    <ul>
        <li>
            <span class="col-md-2">
                <strong>Идентификатор вашей URL-ссылки:</strong>
            </span>
            @Model.Id
        </li>
        <li>
            <span class="col-md-2">
                <strong>Исходная URL-ссылка:</strong>
            </span>
            <a href="@Model.OriginalUrl">
                @Model.OriginalUrl
            </a>
        </li>
        <li>
            <span class="col-md-2">
                <strong>Укороченная URL-ссылка:</strong>
            </span>
            <a asp-controller="ShortLink" asp-action="RedirectTo" asp-route-path="@ViewData["Path"]">
                http://localhost:5000/ShortLinks/RedirectTo/@ViewData["Path"]
            </a>
        </li>
    </ul>
</div>
